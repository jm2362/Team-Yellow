server {
  listen                *:80;
  server_name           ~^(?<domain>.+)\.<%= @host -%>\$;
  index  index.html index.htm index.php;
  access_log            /var/log/nginx/<%= @host -%>.access.log;
  error_log             /var/log/nginx/<%= @host -%>.error.log;
  location / {
    root      /var/www/templates/\$domain;
  }
}
